<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/background_card_dark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header with member name and copy button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <View
                android:id="@+id/memberAvatar"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/circular_button_background" />

            <TextView
                android:id="@+id/memberName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Member Name"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/white" />

            <ImageButton
                android:id="@+id/copyButton"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_copy"
                android:contentDescription="Copy amount"
                android:padding="4dp"
                android:tint="@color/white" />

        </LinearLayout>

        <!-- Amount breakdown -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/subtotalText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Subtotal: £0.00"
                android:textSize="14sp"
                android:textColor="@color/text_secondary_dark" />

            <TextView
                android:id="@+id/discountText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Discount: -£0.00"
                android:textSize="14sp"
                android:textColor="@color/text_secondary_dark" />

            <TextView
                android:id="@+id/finalAmountText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Final: £0.00"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/accent_500" />

        </LinearLayout>

        <!-- Items list -->
        <TextView
            android:id="@+id/itemsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Items: None"
            android:textSize="12sp"
            android:textColor="@color/text_secondary_dark"
            android:background="@drawable/items_background"
            android:padding="8dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView> 