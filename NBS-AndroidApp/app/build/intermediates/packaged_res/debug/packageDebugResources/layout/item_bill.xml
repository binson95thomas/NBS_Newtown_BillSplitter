<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="@color/background_card"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Item Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/itemName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Item Name"
                    android:textColor="?android:textColorPrimary"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp"
                    android:gravity="center_vertical">
                    <TextView
                        android:id="@+id/itemPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Â£0.00"
                        android:textColor="?android:textColorPrimary"
                        android:textSize="17sp"
                        android:textStyle="bold" />
                    <Button
                        android:id="@+id/splitEvenlyButton"
                        android:layout_width="wrap_content"
                        android:layout_height="28dp"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/button_background_selector"
                        android:text="Split Evenly"
                        android:textColor="@color/white"
                        android:drawableLeft="@drawable/ic_people"
                        android:drawablePadding="8dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:textSize="12sp"
                        android:elevation="2dp"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:gravity="center" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <ImageButton
                    android:id="@+id/editItemButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/circular_button_background"
                    android:contentDescription="Edit item"
                    android:padding="8dp"
                    android:src="@drawable/ic_edit"
                    android:tint="@color/accent_500" />
                <ImageButton
                    android:id="@+id/deleteItemButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/circular_button_background"
                    android:contentDescription="Delete item"
                    android:padding="8dp"
                    android:src="@drawable/ic_delete"
                    android:tint="@color/error_500" />
            </LinearLayout>
        </LinearLayout>

        <!-- Member Assignment Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="ðŸ‘¥ Assigned to:"
                android:textColor="?android:textColorSecondary"
                android:textSize="14sp"
                android:textStyle="bold" />

            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/memberCheckboxContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:flexWrap="wrap"
                app:justifyContent="flex_start"
                app:alignItems="center" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView> 